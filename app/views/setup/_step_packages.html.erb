<% if current_user.project %>
<% if step.model && !step.model.empty? %>
<%= link_to 'New Package', new_setup_project_packages_path(current_user.project), class: 'btn btn-info pull-right' %>
<table class="table table-striped table-condensed">
    <thead>
        <tr>
            <th>Package</th>
            <th>Entity Groups</th>
            <th>Available States</th>
        </tr>
    </thead>
    <body>
        <%= render partial: "package", collection: step.model %>
    </body>
</table>
<% else %>
<%= link_to 'Let\'s create your first package of activities', new_setup_project_packages_path(current_user.project)  %>
  <% end %>
<% end %>
