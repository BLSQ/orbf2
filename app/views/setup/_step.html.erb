<div class="panel panel-default">
    <div class="panel-heading clickable" data-toggle="collapse" data-target="#step-<%= step.kind%>">
        <%= step.name %>
        <span class="pull-right"><%= step.status %></span>
    </div>
    <div id="step-<%=step.kind%>" class="panel-body panel-collapse <%= "collapse" if step.highlighted %>">
        <%= render partial: "setup/step_#{step.kind}", step: step %>
    </div>
</div>
