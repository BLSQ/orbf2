<a name="<%= (invoice.package&.code || invoice.payment_rule&.code)+"-"+invoice.period%>"></a>
<h2><%= invoice.package&.code || invoice.payment_rule&.code %> <%= invoice.period%></h2>

<% if invoice.activity_items.any? %>
<table class="table invoice num-span-table table-striped">
  <thead>
    <tr>
      <% invoice.headers.each do |header| %>
         <th><%=header.humanize %> </th>
      <%end%>
      <th>Activity</th>
    </tr>
    </thead>
    <tbody>
      <%= render partial: "activity_item", collection: invoice.activity_items, :as => :activity_item, locals: {invoice:invoice}  %>
    </tbody>
</table>
<% end %>

<% if invoice.total_items.any? %>
<%= render partial: "total_item", collection: invoice.total_items, :as => :total_item, locals: {invoice:invoice}  %>
<% end %>
