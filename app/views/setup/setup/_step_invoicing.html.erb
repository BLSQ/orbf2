
<% if project.id %>
  <%= link_to 'Configure dhis2 mapping of formulas', new_setup_project_formula_mapping_path(project), class: 'btn btn-info' %>
  <%= link_to 'Invoicing simulation', new_setup_project_invoice_path(project), class: 'btn btn-info'  %>
<% end %>
<% datasets = project.payment_rules.flat_map(&:datasets)%>
<%if datasets.any?%>
  <table class="table table-striped table-condensed">
        <thead>
            <tr>
              <th>Payment rule</th>
              <th>Dataset</th>
              <th></th>
            </tr>
        </thead>
        <body>
        <%= render partial: "payment_rule_dataset", collection: datasets%>
        </body>
  </table>
<%end%>
