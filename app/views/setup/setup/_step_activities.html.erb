<% if step.model%>
  <% if step.model && !step.model.empty? %>
  <%= link_to 'New Activity', new_setup_project_activity_path(project), class: 'btn btn-info pull-right' %>
  <table class="table table-striped table-condensed">
      <thead>
          <tr>
            <th>Activity</th>
            <th>Data elements</th>
            <th>Packages</th>
          </tr>
      </thead>
      <body>
          <%= render partial: "activity", collection: step.model %>
      </body>
  </table>
  <% else %>
    <%= link_to 'Let\'s create activities', new_setup_project_activity_path(project)  %>
  <% end %>
  <% if project.missing_activity_states.values.flatten.any? %>
    <%= link_to 'Let\'s create missing dhis2 elements', mass_creation_setup_project_activities_path(project), class: 'btn btn-danger'  %>
  <% end %>

<% end %>
