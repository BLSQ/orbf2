<% if step.model%>
  <% if step.model && !step.model.empty? %>
  <div class="actions pull-right">
  <%= link_to 'Trigger a data element dhis2 snapshot', setup_project_snapshots_path(project), class: 'btn btn-default', method: :post %>
  <%= link_to 'New Activity', new_setup_project_activity_path(project), class: 'btn btn-info' %>
  </div>
  <table class="table table-striped table-condensed">
      <thead>
          <tr>
            <th>Activity</th>
            <th>Data elements</th>
            <th>Packages</th>
          </tr>
      </thead>
      <body>
          <%= render partial: "activity", collection: step.model %>
      </body>
  </table>
  <% else %>
    <%= link_to 'Let\'s create activities', new_setup_project_activity_path(project)  %>
  <% end %>


<% end %>
