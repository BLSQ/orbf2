<% if step.model%>
  <table class="table table-striped table-condensed">
      <thead>
          <tr>
              <th>Package</th>
              <th>Activity rule(s)</th>
              <th>Package rule(s)</th>
          </tr>
      </thead>
      <body>
          <%= render partial: "rule", collection: step.model, as: :package %>
      </body>
  </table>
<br>
<%if @project.payment_rules %>
  <table class="table table-striped table-condensed">
      <thead>
          <tr>
              <th>Payment rule</th>
              <th>Available output</th>
              <th>Name</th>
          </tr>
      </thead>
      <body>
          <%= render partial: "project_rule", collection: @project.payment_rules %>
      </body>
  </table>
  <%= link_to 'Let\'s add final payment rule', new_setup_project_rule_path(@project) , class: 'btn btn-info pull-right'%>
  <% end %>
<% end %>
