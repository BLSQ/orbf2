<% if flash[:notice] %>
<div class="alert alert-info">
  <%= flash[:notice] %>
</div>
<% end %>
<% if flash[:alert] %>
<div class="alert alert-warning">
  <%= flash[:alert] %>
</div>
<% end %>
<% if flash[:success] %>
<div class="alert alert-success">
  <%= flash[:success] %>
</div>
<% end %>
<% if flash[:failure] %>
<div class="alert alert-danger">
  <%= flash[:failure] %>
</div>
<% end %>
